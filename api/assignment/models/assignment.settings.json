{
  "kind": "collectionType",
  "collectionName": "assignments",
  "info": {
    "name": "assignment",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "dueDate": {
      "type": "datetime",
      "required": true,
      "unique": false
    },
    "journals": {
      "via": "assignment",
      "collection": "journal"
    },
    "description": {
      "type": "component",
      "repeatable": true,
      "component": "description.assignment-description",
      "required": true
    },
    "introduction": {
      "type": "text"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
